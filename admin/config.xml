<?xml version="1.0" encoding="utf-8"?>
<config>
	<params>
		<param name="@spacer" type="radio" default="" label="A_COM_PARAM_DESC" description="A_COM_PARAM_DESC">
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="show_title" type="radio" default="1" label="A_ARTICLE_TITLE" description="A_ARTICLE_TITLE_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="link_titles" type="radio" default="1" label="Linked Titles" description="TIPIFYESTITLECONTENTITEMS">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="show_intro" type="radio" default="1" label="A_ARTICLE_INTRO" description="A_ARTICLE_INTRO_DESC">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="show_section" type="radio" default="0" label="A_SECTION" description="A_SECTION_DESC">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="link_section" type="radio" default="0" label="Section Name Linkable" description="PARAMSECTIONLINK">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="show_category" type="radio" default="1" label="Category Name" description="PARAMCATEG">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="link_category" type="radio" default="1" label="Category Name Linkable" description="PARAMCATEGLINK">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>

		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="show_author" type="radio" default="1" label="Author Names" description="TIPIFSETTOSHOWAUTHOR">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="show_create_date" type="radio" default="1" label="Created Date and Time" description="TIPIFSETTOSHOWDATETIMECREATED">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="show_modify_date" type="radio" default="1" label="Modified Date and Time" description="TIPIFSETTOSHOWDATETIMEMODIFIED">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<!--  This only works with Joomla!'s build in views and layouts. When used with SectionEx the results are unpredictable so we only offer a NO option to OVERRIDE the GLOBAL. -->
		<param name="show_item_navigation" type="radio" default="0" label="A_NAVIGATIONARTICLE" description="A_NAVIGATIONARTICLE_DESC">
			<option value="0">Hide</option>
		</param>		
		<!-- This parameter influences the output of a "Category Blog Layout" or "Section Blog Layout". It has no influence on article display.
		<param name="show_readmore" type="radio" default="1" label="A_TIPIFSETTOSHOWREADMORELINK" description="A_TIPIFSETTOSHOWREADMORELINK_DESC">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		-->
		<param name="show_vote" type="radio" default="0" label="A_TIPIFSETTOSHOWVOTING" description="A_TIPIFSETTOSHOWVOTING_DESC">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="show_hits" type="radio" default="1" label="Hits" description="TIPIFSETTOSHOWHITS">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>

		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="show_icons" type="radio" default="1" label="Icons" description="TIPPRINTPDFEMAIL">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="show_pdf_icon" type="radio" default="1" label="PDF Icon" description="PARAMPDF">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="show_print_icon" type="radio" default="1" label="Print Icon" description="PARAMPRINT">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="show_email_icon" type="radio" default="1" label="Email Icon" description="PARAMEMAIL">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<!-- This parameter influences the output of "Category List Layout" for example. It has no influence on the article display.
		<param name="show_hits" type="radio" default="1" label="Hits" description="TIPIFSETTOSHOWHITS">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		-->
		<!-- TODO: I'm not sure about the FEED setting. But it looks like it has no influence on the way the article is rendered.
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="feed_summary" type="radio" default="0" label="A_TIPSHOWFEEDITEM" description="A_TIPSHOWFEEDITEM_DESC">
			<option value="0">Intro Text</option>
			<option value="1">Full Text</option>
		</param>
		-->
	</params>
</config>